endif

" Quickfix
"==============================================================================
nnoremap <leader>q :call QuickfixToggle()<cr>
let g:quickfix_is_open = 0

function! QuickfixToggle()
    if g:quickfix_is_open
        cclose
        let g:quickfix_is_open = 0
    else
        copen
        let g:quickfix_is_open = 1
    endif
endfunction

nnoremap <leader>cn :cn<cr>
nnoremap <leader>cp :cp<cp>

